       <div>New {{ $key }}: {{ $value }}</div>
   @endforeach

   Route::group(
     [
       'prefix'=>'email',
   'middleware'=>'api'
   ],
     function(){
       Route::post('/api/leads/{lead}/mail','LeadController@mail');

   });

   ->withSwiftMessage(function ($message) {
               $message->getHeaders()
                   ->addTextHeader('X-Model-ID',$this->lead->id);
           });
