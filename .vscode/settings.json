{
  // Core toggles
  "terminal.integrated.shellIntegration.enabled": true,
  "git.decorations.enabled": false,
  "git.requireGitUserConfig": true,

  // (watcher excludes moved lower in file with expanded list)

  // Disable Explorer auto reveal (saves CPU cycles)
  "explorer.autoReveal": false,

  // Disable minimap (small preview on the side)
  "editor.minimap.enabled": false,

  // Disable breadcrumbs at the top
  "breadcrumbs.enabled": false,

  // Disable semantic highlighting (lighter on memory)
  "editor.semanticHighlighting.enabled": false,

  // Disable smooth scrolling
  "editor.smoothScrolling": false,

  // Disable Git features (use Git Bash or Laragon terminal instead)
  "git.enabled": false,
  "git.autorefresh": false,

  // Turn off IntelliSense suggestions unless triggered
  "editor.quickSuggestions": {
    "other": false,
    "comments": false,
    "strings": false
  },

  // Disable error squiggles unless you run manually
  "javascript.suggest.autoImports": false,
  "php.validate.enable": false,

  // Telemetry off (less background processes)
  "telemetry.telemetryLevel": "off",

  // Reduce font rendering cost
  "editor.fontLigatures": false,
  "editor.renderWhitespace": "none",

  // Limit terminal scrollback to reduce memory
  "terminal.integrated.scrollback": 500,

  // Exclude heavy folders from Explorer (they remain on disk)
  "files.exclude": {
    "**/node_modules": true,
    "vendor": true,
    "storage": true,
    "bootstrap/cache": true,
    "public/packages": true,
    ".idea": true,
    ".cursor": true
  },

  // Exclude from search index
  "search.exclude": {
    "**/node_modules": true,
    "vendor": true,
    "public/packages": true,
    "storage": true,
    "bootstrap/cache": true
  },

  // Expand watcher excludes with additional heavy dirs
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/vendor/**": true,
    "**/storage/**": true,
    "**/.git/**": true,
    "public/packages/**": true,
    "bootstrap/cache/**": true
  },

  // UI & editor lightweight tweaks
  "editor.codeLens": false,
  "editor.inlayHints.enabled": "off",
  "workbench.startupEditor": "none",
  "workbench.editor.enablePreview": true,
  "workbench.editor.restoreViewState": false,
  "workbench.tree.indent": 10,

  // JavaScript/TypeScript performance
  "javascript.suggest.completeFunctionCalls": false,
  "typescript.tsserver.useSeparateSyntaxServer": true,
  "typescript.disableAutomaticTypeAcquisition": true,
  "typescript.tsserver.maxTsServerMemory": 1024,

  // NPM script scanning off
  "npm.autoDetect": "off",

  // PHP Intelephense performance (respects user memory limits)
  "intelephense.files.maxMemory": 1024,
  "intelephense.files.exclude": [
    "**/vendor/**",
    "**/storage/**",
    "**/public/packages/**",
    "**/bootstrap/cache/**"
  ]
}